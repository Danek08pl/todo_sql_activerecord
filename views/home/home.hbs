<h2>Zadania:</h2>
<table>
    <thead>
    <tr>
        <th>#</th>

        <th>
            Zadanie
        </th>

    </tr>

    </thead>
    <tbody>
    {{#each todos}}
        <tr>
            <th>{{@index}}</th>
            <th>
                {{this.title}}

            </th>
            <th>
                <form method="POST" action="/{{this.id}}?_method=PUT">
                    <input type="text" name="update_title">
                    <button class="updateButton" type="submit">Aktualizuj</button>
                </form>
            </th>

        </tr>
    {{/each}}
    </tbody>
</table>